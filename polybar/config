ws-icon-7 = 8;Ôáé
ws-icon-8 = 9;Ôáé
ws-icon-9 = 10;Ôáé
ws-icon-default = " Ôáé "

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

label-mode = %mode%
